{
  "version": 2,
  "cleanUrls": true,
  "rewrites": [
    { "source": "/",            "destination": "/home.html" },
    { "source": "/free-picks",  "destination": "/free-picks.html" },
    { "source": "/pricing",     "destination": "/pricing.html" },
    { "source": "/pro",         "destination": "/pro.html" },
    { "source": "/faq",         "destination": "/FAQ.html" },
    { "source": "/account",     "destination": "/account.html" },
    { "source": "/api/:match*", "destination": "/api/:match*" }
  ],
  "crons": [
    {
      "path": "/api/rpc?action=free-picks&tz=Europe/Sofia&minConf=75&refresh=1",
      "schedule": "0 6 * * *"
    }
  ]
}
